<div class="container">
<%= link_to "< Back to musicians", musicians_path %>
<!-- paragraph below is super helpful -->
<!-- <p>Find me in app/views/musicians/show.html.erb</p> -->

<%= image_tag(@musician.photo, height: '200') %>
<h2><%= @musician.first_name %> <%= @musician.last_name %></h2>
<%= link_to "Book this Artist", new_user_booking_path(@musician), class: "btn btn-primary" %>
<br>
<br>
<h3>About</h3>
<p><%= @musician.bio %></p>
<h4>Instruments</h4>
<p><%= @musician.instruments %></p>
<h4>Ensemble type</h4>
<p><%= @musician.ensemble_type %></p>

<span><h3>$<%= @musician.price %></h3><p> per concert</p></span>

<p> <strong>Repertoire 1:</strong>  <%= @musician.repertoire_1 %> | <%= @musician.repertoire_1_length %> minutes</p>
<p>  <strong>Repertoire 2:</strong>  <%= @musician.repertoire_2 %> | <%= @musician.repertoire_2_length %> minutes</p>

<%= link_to "Video", @musician.video %>

<h3>Contact</h3>
<p>Email: <%= @musician.email %></p>
<p>Phone number: <%= @musician.phone_number %></p>
<%= link_to "Website", @musician.website %>

<h3>On Social Media</h3>
<div class="links-to-socials" style="display: inline; color: #69748C" >
  <%= link_to @musician.facebook do %>
    <i class="fab fa-facebook"></i>
  <% end %>
  <%= link_to @musician.youtube do %>
    <i class="fab fa-youtube"></i>
  <% end %>
  <%= link_to @musician.instagram do %>
    <i class="fab fa-instagram"></i>
  <% end %>
</div>
<br>
<%= link_to "Browse Musicians", musicians_path %>

<%= link_to "Book this Artist", new_user_booking_path(@musician) %>
<%= link_to "Leave a review", new_user_review_path(@musician) %>

<h2>Average rating: <%= @musician.average_rating %></h2>
<h3>Reviews</h3>
<div class="all-reviews">
  <% reviews = Review.where(musician_id: @musician.id) %>
  <% reviews.each do |review| %>
    <%= render 'review_card', { review: review } %>
  <% end %>
</div>


</div>

