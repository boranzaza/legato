<div class="musician-card card" >
  <div class="card-img-top">
    <%= image_tag musician.photo, class: "musician-picture" %>
  </div>

  <div class="musician-info card-body">
    <div class="card-title">
      <h2><%= musician.first_name %> <%= musician.last_name %></h2>
      <hr style="color: #0D253D">
    </div>
    <p class="card-text"><strong>Ensemble type: </strong><%= musician.ensemble_type %></p>

    <p class="card-text"><strong>Instruments: </strong><%= musician.instruments %></p>

      <!-- this is the price/button section -->
      <div class="d-flex justify-content-between align-items-end">
        <h3 class="card-bottom-text">$<%= musician.price %> <br> <small> per concert</small></h3>
        <%= link_to "LEARN MORE",  musician_path(musician), class: "btn-primary small-btn" %>
      </div>

  </div>
</div>

