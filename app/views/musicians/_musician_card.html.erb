<div class="musician-card card" >
  <div class="card-img-top">
    <%= image_tag musician.photo, class: "musician-picture" %>
  </div>

  <div class="musician-info card-body">
    <div class="card-title">
      <h2><%= musician.first_name %> <%= musician.last_name %></h2>
      <hr id="card-line">
    </div>
    <h4 class="card-text">Ensemble type: <%= musician.ensemble_type %></h4>
   <!--  <% if musician.average_rating.class == String %>
      <p>No reviews yet</p>
    <% else %>
      <%= render 'review_stars', { musician: musician } %>
    <% end %> -->

    <h4 class="musicians-instrument">Instruments: <%= musician.instruments %></h4>

      <!-- this is the price/button section -->
      <div class="d-flex justify-content-between align-items-end">
        <h3 class="card-bottom-text">$<%= musician.price %> <br> <small> per concert</small></h3>
    <!--     <%= link_to "Leave a review", new_user_review_path(musician) %>
     -->
        <%= link_to "LEARN MORE",  musician_path(musician), class: "btn btn-primary" %>
      </div>

  </div>
</div>

