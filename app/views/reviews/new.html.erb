<button type="button" class="btn_home" style="padding-left: 30px; "> <%= link_to "< Home", musicians_path %>
    </button>
  <div class="row justify-content-center">
    <h1>LEAVE A REVIEW</h1>
  </div>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-8 col-md-8 col-lg-6 col-xl-6 ">
      <div class="form-login">
        <div class="container">
          <div class="review-form">
            <% star_empty = '<i class="far fa-star"></i>' %>
            <% star_half = '<i class="fas fa-star-half-alt"></i>' %>
            <% star_full = '<i class="fas fa-star"></i>' %>
            <%= simple_form_for @review, url: user_reviews_path(current_user) do |t|%>
              <%= t.input :musician_id, as: :string, input_html: { value: @musician.id, class: "d-none" }, label: false %>
              <div class="row star-rating justify-content-center">
                <div data-value="1" class="star"><i class="far fa-star"></i></div>
                <div data-value="2" class="star"><i class="far fa-star"></i></div>
                <div data-value="3" class="star"><i class="far fa-star"></i></div>
                <div data-value="4" class="star"><i class="far fa-star"></i></div>
                <div data-value="5" class="star"><i class="far fa-star"></i></div>
              </div>
              <%= hidden_field_tag "review[rating]", "", id: "review_rating" %>
              <%= t.input :content, label: "Comment", as: :text %>
              <%= t.submit "Submit review" %>
            <%end%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
